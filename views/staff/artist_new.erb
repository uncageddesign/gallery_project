    <label>
      Death: <input id="death" type="text" name="death">
    </label> <br>
    <label>
      Nationality: <input id="nationality" type="text" name="nationality">
    </label> <br>
    <label>
      Bio: <br>
      <textarea id="bio" name="bio" rows="20" cols="120"></textarea>
    </label> <br>
