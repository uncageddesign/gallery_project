<div class="content">

  <h1>Artists In Residence</h1>

  <div class="">

    <div class="flex-container">
    <% @artists.each do |artist| %>
      <div class="item card">
      <p><img class="card-img"src="<%= artist.photo %>" alt="Artist photo"></p>
      <h2><%= artist.name %></h2>
      <p style="margin-bottom:40px"><%= artist.birth %> - <%= artist.death %></p>
      <p><a href="/artists/<%= artist.id %>" class="button">View Profile</a></p>
      </div>
    <% end %>

    </div>
  </div>
</div>
