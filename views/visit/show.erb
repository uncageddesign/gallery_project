<div class="content">

  <h1>Your Recommendations</h1>

  <div>
    <% if @exhibit.id %>
    <div class="item card">
      <% @exhibit.each do |exhibit| %>
      <p><img class="card-img" src="<%= exhibit.photo %>" alt="Exhibit photo"></p>
      <h2><%= exhibit.name %></h2>
      <p>Start: <%= exhibit.run_start %></p>
      <p>End: <%= exhibit.run_end %></p>
      <p><a href="/exhibits/<%= exhibit.id %>">View Details>></a></p>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
